@model List<CongNoNhanVienModel>
<style>
    .tab-content > .active {
        opacity: 1;
    }

    .tab-content {
        border-style: solid;
        border-width: 0px 1px 1px 1px;
        border-color: #ddd;
        padding: 10px;
    }

    .nav-tabs > li > a {
        color: #fff;
        cursor: default;
        background-color: #2A3F54;
        border: 1px solid #ddd;
        border-bottom-color: #fff !important;
        font-weight: bold;
    }

    .nav-tabs > li.active > a {
        color: #2A3F54 !important;
        cursor: default;
        background-color: #fff !important;
        border: 1px solid #ddd;
        border-bottom-color: #fff !important;
        font-weight: bold;
    }

    .modal-content {
        margin: 30px auto;
    }
    .table-responsive {
        background: #fff;
        border-radius: 8px;
    }

    @@media(min-width: 768px) {
        .CNNV .modal-content {
            width: 800px;
        }
    }

    .modal-body img {
        width: 100% !important;
        height: auto !important;
    }
    .modal-body {
        padding: 0 15px 15px;
    }
    .modal-header {
        padding: 6px 15px;
        border-bottom: none;
        background: #2A3F54;
    }
</style>
<div class="CNNV">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" style="color:#fff">&times;</button>
            <h4 style="color:white">Công nợ nhân viên</h4>
        </div>
        <div class="modal-body" style=" background: #2A3F54;">
            <div class="table-responsive">
                <table id="gridCNNV" class="table table-striped jambo_table bulk_action">
                    <thead>
                        <tr class="headings">
                            <th class="column-title">STT </th>
                            <th class="column-title">Mã NV</th>
                            <th class="column-title">Tên NV</th>
                            <th class="column-title">Số tiền nợ</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            int i = 1;
                            @foreach (var item in Model)
                            {
                                <tr class="even pointer">
                                    <td class="">@i</td>
                                    <td class="">@item.MaNV</td>
                                    <td class="">@item.TenNV</td>
                                    <td class="">@string.Format("{0:0,0}", double.Parse(item.SoTienNo))</td>
                                </tr>
                                i++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
