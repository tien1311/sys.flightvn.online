@using Manager.DataAccess.Repository
@inject Microsoft.Extensions.Configuration.IConfiguration _configuration
@{
    var landingPageRepository = new LandingPageRepository(_configuration);
    var listCategory = landingPageRepository.GetCategoryForPost().GetAwaiter().GetResult();
}

<div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content" style=" background: #2A3F54;">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h1 style="color:#fff">Tạo mới bài viết </h1>
        </div>
        <div class="modal-body" style="border-radius:8px; background-color:#fff;">

            <form id="submitForm">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label for="inputEmail3" class="control-label">Tiêu đề</label>
                            <input class="form-control" type="text" id="Name" name="Name" placeholder="Tiêu đề" required>
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label for="inputEmail3" class="control-label">Danh mục</label>
                            <select id="CategorySelect" name="CategoryId" class="form-control">
                                @foreach (var item in listCategory) {
                                    <option value="@item.Id" >@item.Name</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="col-sm-12">
                        <div class="form-group">
                            <label for="inputEmail3" class="control-label">Mô tả ngắn</label>
                            <textarea id="ShortDescription" class="form-control" name="ShortDescription"></textarea>
                        </div>
                    </div>

                    <div class="col-sm-12">
                        <div class="form-group">
                            <label for="inputEmail3" class="control-label">Mô tả chi tiết</label>
                            <textarea id="LongDescription" class="form-control"></textarea>
                        </div>
                    </div>

                </div>
                <button id="btnSave" type="submit" class="btn btn-primary">Lưu</button>
            </form>
        </div>
    </div>
</div>
<script src="~/js/landingpage/post/createpost.js"></script>