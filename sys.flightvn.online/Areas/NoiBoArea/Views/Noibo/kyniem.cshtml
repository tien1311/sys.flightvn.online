@{
    ViewData["Title"] = "Kỷ Niệm";
    Layout = "~/Views/Shared/MasterLayout.cshtml";
}
@model KyNiemModel

<title>@ViewData["Title"]</title>
<link rel="stylesheet" type="text/css" href="~/css/webslidemenu.css">
<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.3.1.min.js"></script>
<script src="~/js/jssor.min.js" type="text/javascript"></script>
<script src="~/js/webslidemenu.js" type="text/javascript"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.lazyload/1.9.1/jquery.lazyload.min.js"></script>
<script type="text/javascript" src="~/js/test.js"></script>

@using (Html.BeginForm("kyniem", "Noibo", FormMethod.Get))
{
    <div class="header">
        <nav class="wsmenu clearfix">
            <ul class="mobile-sub wsmenu-list">
                @foreach (var menu in Model.list_event_name)
                {
                    <li>

                        <a href="#" id=""><i class="fa"></i>@menu.Event_Name<input id="event" value="@menu.Event_ID" type="hidden" /></a>
                        <ul class="wsmenu-submenu">
                            @foreach (var item in Model.listnam)
                            {
                                if (menu.Event_ID == item.Event_ID)
                                {
                                    <li>
                                        <a href="#" id="nam">@item.So_Nam<i class="fa fa-angle-right"></i></a>
                                        <ul class="wsmenu-submenu-sub">
                                            <li><a href="#" onclick="kyniem(@menu.Event_ID,@item.So_Nam,'@menu.Event_Name')">Hình</a></li>
                                            @*<li><a href="@Url.Action("Video", new { @nam = item.nam, @event_id = item.event_id })"><i class="fa fa-angle-right"></i>Video</a></li>*@
                                        </ul>
                                    </li>
                                }

                            }
                        </ul>
                    </li>
                }
            </ul>
        </nav>
    </div>
}
<div class="cl"></div>

<p class="title">Hình kỷ niệm <span id="title_event">@Model.event_name</span> năm <span id="title_nam">@Model.nam</span></p>
