@model List<Service>
@inject IConfiguration _configuration
@{
    ViewData["Title"] = "Dịch vụ Khách sạn";
    Layout = "~/Views/Shared/MasterLayout.cshtml";
    HotelRepository hotel_Rep = new HotelRepository(_configuration);
}

<title>@ViewData["Title"]</title>
<div>
    <a id="BtnCreate" href="javascript:;" class="btn btn-primary">Tạo mới</a>
</div>

<div class="table-responsive">
    <table id="gridHotel" class="table table-striped jambo_table bulk_action">
        <thead>
            <tr>
                <th style="width:29px; text-align:center;"></th>
                <th style="width: 42px; text-align: center;">STT</th>
                <th style="width: 130px; text-align: center;">Hình ảnh</th>
                <th>Tên dịch vụ</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                int i = 0;
                foreach (var item in Model)
                {
                    i++;
                    <tr id="@item.Id">

                        <td style="text-align: center;">
                            <a class="btnEdit" data-id="@item.Id" style="color:blue;" id="btnEdit" href="javascript:;"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                        </td>
                        <td style="text-align: center;">@i</td>
                        <td>
                            <img src="@item.Image" style="width:50px; height:50px;" />
                        </td>
                        <td>@item.ServiceName</td>
                        <td>
                            <a class="DeleteHotel btnDelete" style="color:red;" data-id="@item.Id" id="DeleteHotel" href="#">
                                <i class="fa fa-trash Action_Icon" aria-hidden="true"></i>
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" style="color:red">Chưa có dữ liệu</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script src="~/js/hotel/hotelservice.js"></script>

