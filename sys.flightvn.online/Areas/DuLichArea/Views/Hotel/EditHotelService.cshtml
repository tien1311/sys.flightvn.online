@model Service
<link href="~/css/paymentgateway/customfileinput.css" rel="stylesheet" />

<div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content" style=" background: #2A3F54;">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h1 style="color:#fff">Tạo mới dịch vụ khách sạn</h1>
        </div>
        <div class="modal-body" style="border-radius:8px; background-color:#fff;">

            <form id="submitForm">
                <div class="row">

                    <div class="col-sm-2">
                        <img src="@Model.Image" style="width:50px; height:50px" />
                        <input name="id" value="@Model.Id" hidden />

                    </div>

                    <div class="col-sm-4">
                        <div class="form-group">
                            <label for="inputEmail3" class="control-label">Tên dịch vụ</label>
                            <input class="form-control" type="text" id="Name" value="@Model.ServiceName" name="serviceName" placeholder="Tên dịch vụ" required>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label for="inputImage" class="control-label">Ảnh</label>
                            <br />
                            <label for="inputImage" class="custom-file-upload">
                                <i class="fa fa-cloud-upload"></i> Chọn ảnh
                            </label>
                            <input id="inputImage" name="ImageInputValue" type="file" class="ImageInputValue" />
                        </div>
                    </div>

                    <div class="col-sm-3">
                        <p>Ảnh sau khi cập nhật</p>
                        <div id="image-container">
                        </div>
                    </div>

                </div>
                <button id="btnSave" type="submit" class="btn btn-primary">Lưu</button>
            </form>
        </div>
    </div>
</div>
<script src="~/js/hotel/generateimagetoview.js"></script>
<script src="~/js/hotel/edithotelservice.js"></script>