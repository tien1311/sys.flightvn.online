                                    var itemBooking = dulichRepository.NewDetailBookingTourHot(TourCode);
                                    // var itemBooking = itemsBooking.Where(x => x.TourCode == TourCode).FirstOrDefault();
                                }

                                @if (itemBooking.IDStatus == "6")
