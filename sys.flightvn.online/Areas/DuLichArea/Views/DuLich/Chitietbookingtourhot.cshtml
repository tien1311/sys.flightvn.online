@model TourEV
@inject IConfiguration _configuration

<style>
    @@media(min-width: 768px) {
        .modal-dialog {
            width: 1200px;
            margin: 30px auto;
        }
    }

    select option[disabled] {
        color: #999;
    }


    .modal-header {
        padding: 6px 15px;
        border-bottom: none;
    }

    .bg {
        font-weight: bold;
        background: #f7f3f3;
    }

    .borber-table {
        border: 1px solid #ddd;
    }

        .borber-table > div > label {
            border-top: 1px solid #ddd;
            margin: 0;
            padding: 10px;
        }

        .borber-table > div > div {
            border-top: 1px solid #ddd;
            margin: 0;
        }

            .borber-table > div > div > span {
                padding: 10px;
                display: block;
                float: left;
            }

            .borber-table > div > div input, .borber-table > div > div select {
                margin-top: 4px;
            }

    .title-detail-BK {
        background: #e2e1e1 !important;
        color: #f76f09 !important;
        margin-bottom: 0px;
        margin-top: 10px;
        padding: 5px 10px;
        font-size: 14px;
        display: table;
        width: 100%;
    }

    .note-section {
        height: auto;
        min-height: calc(2 * 24px);
    }

    .bg label,
    .bg div {
        background: #f7f3f3;
    }



    @@media (min-width: 768px) {
        #cancel_booking_detail .modal-dialog {
            width: 500px;
        }
    }


    #custom-loading-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.5);
        display: none;
        z-index: 1000;
    }

    .custom-loading-spinner {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        border: 8px solid #f3f3f3;
        border-top: 8px solid #3498db;
        border-radius: 50%;
        width: 50px;
        height: 50px;
        animation: spin 1s linear infinite;
    }

    @@keyframes spin {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }
</style>


<div id="custom-loading-overlay">
    <div class="custom-loading-spinner"></div>
</div>

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header" style=" background: #2A3F54;">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h1 style="color:#fff">CHI TIẾT TOUR BOOKING</h1>
        </div>
        <div class="modal-body">
            <div class="title-detail-BK" style="margin-bottom:10px;">MÃ BOOKING:@Model.DetailTourBooking.TourID <input id="TourCodeInputValue" type="text" hidden name="TourCode" value="@Model.DetailTourBooking.TourID" /> </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="row">
                        <div class="col-xs-7">
                            <div class="form-group">

                                @{

                                    DulichRepository dulichRepository = new DulichRepository(_configuration);
