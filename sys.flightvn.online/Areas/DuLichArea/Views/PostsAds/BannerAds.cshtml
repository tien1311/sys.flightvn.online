@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Upload_ImgModel
@{
    ViewData["Title"] = "BannerAds";
    Layout = "~/Views/Shared/MasterLayout.cshtml";
}

<title>@ViewData["Title"]</title>
<h2>Banner quảng cáo</h2>

<div class="x_panel">
    <div class="x_content">
        <form asp-controller="PostsAds" asp-route-i="15" asp-action="SaveImgBannerAds" method="post" enctype="multipart/form-data">
            <div class="row form-horizontal">
                <div class="col-sm-3">
                    <div class="form-group">
                        <div class="row">
                            <label for="inputEmail3" class="col-sm-2 control-label">Link</label>
                            <div class="col-sm-10">
                                <input class="form-control" name="Link" placeholder="" value="@Model.bannerADSDuLich.adv_linkto">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="item form-group">
                        <div class="inputfile-box">
                            <input type="file" id="file" class="inputfile" onchange='uploadFilePop_Sys(this)' name="file" accept="image/*">
                            <label for="file">
                                <span class="file-button btn btn-primary" style="margin-bottom: 6px;">
                                    Chọn tập tin
                                </span>
                            </label>
                            <input id="file-namePop_Sys" name="HinhDaUP" class="file-box" placeholder="Chọn tập tin" value="@Model.bannerADSDuLich.adv_picture">
                        </div>
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-6" style="padding-top:8px">
                                <input id="BannerAdsDL_status" name="status" type="checkbox"> Ẩn popup
                                <input type="hidden" id="BannerAdsDL_isshow" value="@Model.bannerADSDuLich.adv_isshow" />
                            </div>
                            <div class="col-xs-6" style="text-align:right">
                                <button type="submit" class="btn btn-success" name="SaveImg" value="SaveImg">Lưu</button>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="item form-group">
                        <label>
                            Hình banner sản phẩm du lịch (1300 x 100px)
                        </label>
                        <div>
                            <img src="@Model.bannerADSDuLich.adv_picture" alt="Alternate Text" width="100px" />

                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<script>
    $(document).ready(function () {
        var PopupSys_isshow = document.getElementById("BannerAdsDL_isshow").value;
        if (PopupSys_isshow != "1") {
            $('#BannerAdsDL_status').attr("checked", "checked");
        }
    });
</script>
