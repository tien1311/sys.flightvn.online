                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="form-label">Tên tour</label>
                                    <input class="form-control" type="text" name="tour_name" value="@Model.Name_Tour" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
