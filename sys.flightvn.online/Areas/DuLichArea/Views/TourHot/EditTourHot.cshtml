                                    <label class="form-label">Điểm đi</label>
                                    <select id="diem_di" class="form-control" name="diem_di">
                                        @foreach (var item in ViewBag.listTinhThanh)
                                        {
                                            <option value="@item.IDTinh">@item.TenTinh</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>


