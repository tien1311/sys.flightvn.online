                        Swal.fire({
                            icon: 'success',
                            text: 'Cập nhật tour thành công!',
                            confirmButtonText: 'Đóng',
                        }).then((result) => {
                            if (result.isConfirmed) {
                                location.reload();
                            }
                        });
