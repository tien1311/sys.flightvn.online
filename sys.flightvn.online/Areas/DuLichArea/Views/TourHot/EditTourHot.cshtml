                        Swal.fire({
                            icon: 'error',
                            text: response.message || 'Đã có lỗi xảy ra!',
                            confirmButtonText: 'Đóng',
                        });
                    }
                },
                error: function (error) {
                    Swal.fire({
                        icon: 'error',
                        text: 'Đã có lỗi xảy ra!',
                        confirmButtonText: 'Đóng',
                    });
                }
            });
        });
