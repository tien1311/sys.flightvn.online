                                    <div class="control-group">
                                        <div class="controls">
                                            <div class=" xdisplay_inputx form-group has-feedback">
                                                <input type="text" class="form-control" id="fax" name="fax" value="@Model[0].member_fax">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 form-group">
                            <div class="row">
                                <label for="" class="col-sm-4 control-label">
                                    Kinh doanh
                                </label>
                                <div class="col-sm-8">
                                    <select id="kinhdoanh" name="kinhdoanh" class="select2_single form-control">
                                        @foreach (var item in Model[0].ListKD)
                                        {
                                            <option @item.Select value="@item.RowID" class="tieude">@item.Ten</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 form-group">
                            <div class="row">
                                <label for="" class="col-sm-4 control-label">
                                    Kế toán
                                </label>
                                <div class="col-sm-8">
                                    <select id="ketoan" name="ketoan" asp-for="ketoan" class="select2_single form-control">

                                        @foreach (var item in Model[0].ListKt)
                                        {
                                            <option @item.Select value="@item.RowID" class="tieude">@item.Ten</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 form-group">
                            <div class="row">
                                <label for="" class="col-sm-4 control-label">
                                    Trạng thái
                                </label>
                                <div class="col-sm-8">
                                    <select id="isactive" name="isactive" asp-for="status" class="select2_single form-control">
                                        @if (Model[0].member_isactive == "1")
                                        {
                                            <option value="1" selected hidden>Kích hoạt</option>
                                        }
                                        else
                                        {
                                            <option value="0" selected hidden>Ngừng kích hoạt</option>
                                        }
                                        <option value="1">Kích hoạt</option>
                                        <option value="0">Ngừng kích hoạt</option>

                                    </select>
                                </div>
                            </div>
                        </div>
                        @if (Model[0].member_isactive == "1")
                        {
                            <input type="hidden">
                        }
                        else
                        {
                            <div class="col-xs-12 form-group">
                                <div class="row">
                                    <label for="" class="col-sm-4 control-label">Lý do khóa</label>
                                    <div class="col-sm-8">
                                        <div class="control-group">
                                            <div class="controls">
                                                <div class=" xdisplay_inputx form-group has-feedback">
                                                    <p style="color:red;">@Html.Raw(Model[0].lockReason) </p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        <div class="col-xs-12 form-group">
                            <div class="row">
                                <label for="" class="col-sm-4 control-label">
                                    Kích hoạt bảo hiểm
                                </label>
                                <div class="col-sm-8">
                                    <select id="isshow" name="isshow" asp-for="isshow" class="select2_single form-control">
                                        @if (Model[0].member_isshow == "True")
                                        {
                                            <option value="True" selected hidden>Hiển thị</option>
                                        }
                                        else
                                        {
                                            <option value="False" selected hidden>Ẩn</option>
                                        }
                                        <option value="True">Hiển thị</option>
                                        <option value="False">Ẩn</option>

                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 form-group">
                            <div class="row">
                                <label for="" class="col-sm-4 control-label">
                                    IsTravel
                                </label>
                                <div class="col-sm-8">
                                    @if (Model[0].IsTravel == "True")
                                    {
                                        <input type="checkbox" id="dulich" name="dulich" checked />
                                    }
                                    else
                                    {
                                        <input type="checkbox" id="dulich" name="dulich" />
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 form-group">
                            <div class="row">
                                <label for="" class="col-sm-4 control-label">Lần đăng nhập cuối</label>
                                <div class="col-sm-8">
                                    <div class="control-group">
                                        <div class="controls">
                                            <div class=" xdisplay_inputx form-group has-feedback">
                                                @Html.Raw(Model[0].last_login)
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 form-group">
                            <div class="row">
                                <div class="col-sm-12" style="text-align:right">
                                    <input type="submit" id="UpdateMember" class="btn btn-primary" value="Lưu" name="EditSave" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="row">
                        <div class="col-xs-12 form-group">
                            <div class="row">
                                <label class="col-sm-2 control-label">Khôi phục mật khẩu</label>
                                <div class="col-sm-6">
                                    <div class="control-group">
                                        <div class="controls">
                                            <div class=" xdisplay_inputx form-group has-feedback">
                                                <input type="password" class="form-control" id="password" name="password"  >
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-4" style="text-align:right">
                                    <input type="submit" class="btn btn-primary" value="Khôi phục" name="resetPassword" id="UpdatePassword" />
                                </div>
                            </div>
                        </div>
