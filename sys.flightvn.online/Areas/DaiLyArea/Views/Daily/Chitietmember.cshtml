@model List<Member>


<div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h1 style="color:red">Chi tiết thành viên</h1>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-sm-6">
                    <div class="row">
                        <div class="col-xs-12 form-group">
                            <div class="row">
                                <label for="" class="col-sm-4 control-label">Khu vực</label>
                                <div class="col-sm-8">
                                    <select id="khuvuc" name="khuvuc" asp-for="khuvuc" class="select2_single form-control">
                                        <option value="5">Miền bắc</option>
                                        <option value="6">Miền trung</option>
                                        <option value="7">Miền nam</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="col-xs-12 form-group">
                            <div class="row">
                                <input type="hidden" class="form-control" id="memberid" name="company" value="@Model[0].member_id">
                                <label for="" class="col-sm-4 control-label">Tên đại lý</label>
                                <div class="col-sm-8">
                                    <div class="control-group">
                                        <div class="controls">
                                            <div class=" xdisplay_inputx form-group has-feedback">
                                                <input type="text" class="form-control" id="company" name="company" value="@Model[0].member_company">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 form-group">
                            <div class="row">
                                <label for="" class="col-sm-4 control-label">Người đại diện</label>
                                <div class="col-sm-8">
                                    <div class="control-group">
                                        <div class="controls">
                                            <div class=" xdisplay_inputx form-group has-feedback">
                                                <input type="text" class="form-control" id="name" name="name" value="@Model[0].member_name">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 form-group">
                            <div class="row">
                                <label for="" class="col-sm-4 control-label">Mã khách hàng</label>
                                <div class="col-sm-8">
                                    <div class="control-group">
                                        <div class="controls">
                                            <div class=" xdisplay_inputx form-group has-feedback">
                                                <input type="text" class="form-control" id="makh" name="makh" value="@Model[0].member_kh">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="MemberChildDetails">
                            <input value="@Model[0].member_childs.Count" id="MemberChildsCount" type="hidden" />

                             <div class="col-xs-12 form-group member-child">
                                        <div class="row">
                                    <label for="" class="col-sm-4 control-label">Mã phụ</label>
                                            <div class="col-sm-5">
                                                <input class="btn btn-primary" onclick="ThemDong(this);" type="button" value="+">
                                            </div>
                                        </div>
                             </div>

                            @if(Model[0].member_childs.Count > 0)
                            {
                                @for (int y = 0; y < Model[0].member_childs.Count; y++)
                                {
                                    int STT = y + 1;
                                    <div class="col-xs-12 form-group member-child">
                                        <div class="row">
                                            <label for="" class="col-sm-4 control-label"></label>
                                            <div class="col-sm-5">
                                                <div class="control-group">
                                                    <div class="controls">
                                                        <div class=" xdisplay_inputx form-group has-feedback">
                                                            <input type="text" placeholder="Mã Phụ @STT" class="form-control" id="member_child_@STT" name="member_child_@STT" value="@Model[0].member_childs[y]">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="item form-group col-sm-3">
                                                <input class="btn btn-danger" onclick="XoaDong(this);" type="button" value="-">
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                         

                           
                        </div>
                      
                         
                        <div class="col-xs-12 form-group">
                            <div class="row">
                                <label for="" class="col-sm-4 control-label">Tên đăng nhập</label>
                                <div class="col-sm-8">
                                    <div class="control-group">
                                        <div class="controls">
                                            <div class=" xdisplay_inputx form-group has-feedback">
                                                <input type="text" class="form-control" id="code" name="code" value="@Model[0].member_code">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 form-group">
                            <div class="row">
                                <label for="" class="col-sm-4 control-label">Email</label>
                                <div class="col-sm-8">
                                    <div class="control-group">
                                        <div class="controls">
                                            <div class=" xdisplay_inputx form-group has-feedback">
                                                <input type="text" class="form-control" id="email" name="email" value="@Model[0].member_email">
