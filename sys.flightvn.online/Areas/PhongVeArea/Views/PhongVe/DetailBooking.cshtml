                                <div class="row">
                                    <div class="col-xs-6">
                                        <input class="form-control input-sm TinhTrang hide" type="text" id="txtMaDatChoLD" name="MaDatChoLD" value="@Model.MaDatCho_LD" placeholder="Mã đặt chổ lượt đi" />
                                    </div>
