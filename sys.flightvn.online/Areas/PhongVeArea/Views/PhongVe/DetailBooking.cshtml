@model DetailBooking
<style>
    @@media(min-width: 768px) {
        .modal-dialog {
            width: 1200px;
            margin: 30px auto;
        }
    }

    .modal-header {
        padding: 6px 15px;
        border-bottom: none;
    }

    .bg {
        font-weight: bold;
        background: #f7f3f3;
    }

    .borber-table {
        border: 1px solid #ddd;
    }

        .borber-table > div > label {
            border-top: 1px solid #ddd;
            margin: 0;
            padding: 10px;
        }

        .borber-table > div > div {
            border-top: 1px solid #ddd;
            margin: 0;
        }

            .borber-table > div > div > span {
                padding: 10px;
                display: block;
                float: left;
            }

            .borber-table > div > div input, .borber-table > div > div select {
                margin-top: 4px;
            }

    .title-detail-BK {
        background: #e2e1e1 !important;
        color: #f76f09 !important;
        margin-bottom: 0px;
        margin-top: 10px;
        padding: 5px 10px;
        font-size: 14px;
        display: table;
        width: 100%;
    }
</style>
<div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h1 style="color:red">Chi tiết booking</h1>
        </div>
        <div class="modal-body">
            <div class="title-detail-BK" style="margin-bottom:10px;">Booking: @Model.OrderID_SMS </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="row">
                        <div class="col-xs-7">
                            <div class="form-group">
                                <select id="Tinhtrang" name="Tinhtrang" class="select2_single form-control">
                                    @if (Model != null && Model.ListTinhTrang != null)
                                    {
                                        foreach (var item in Model.ListTinhTrang)
                                        {
                                            <option @item.Select value="@item.ID">@item.Name</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-xs-5">
                            <div class="form-group">
                                <button class="btn btn-primary" onclick="DoiTrangThai()" value="DoiTrangThai">Đổi trạng thái</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="row">
                        <div class="col-md-5">
                            <div class="row">
                                <label class="col-form-label pad-top-6 col-xs-3 label-align" for="first-name">
                                    Giao cho:
                                </label>
                                <div class="col-xs-5 ">
                                    <select id="NguoiThayDoi" name="NguoiThayDoi" class="select2_single form-control">
                                        @if (Model != null && Model.ListNguoiThayDoi != null)
                                        {
                                            foreach (var item in Model.ListNguoiThayDoi)
                                            {
                                                <option value="@item.ID">@item.Name</option>
                                            }
                                        }
                                    </select>
                                    <input type="hidden" id="NguoiThayDoiOld" name="NguoiThayDoiOld" value="@Model.GiaoCho" />
                                </div>
                                <div class="col-xs-3">
                                    <button class="btn btn-default" value="ThayDoi" onclick="GiaoCho()">Thay đổi</button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-7">
                            <button class="btn btn-primary" value="NhatKy" onclick="NhatKy()">Nhật ký</button>
                            <button class="btn btn-success" value="GuiMail" onclick="SendMail()">Gửi mail</button>
                            <button class="btn btn-info" onclick="SendSMSBookingXuatVe()" value="GuiSMS">Gửi SMS</button>
                            @*<button class="btn btn-warning" value="XacNhan">Xác nhận</button>*@

                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12" role="form">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <input class="form-control" id="OrderID" name="OrderID" placeholder="Mã Booking" value="@Model.OrderID_SMS">
