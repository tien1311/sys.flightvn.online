@model Manager.Model.Models.BankAccount.BankAccountDetail
@{
    ViewData["Title"] = "Chỉnh sửa tài khoản";
}
<title>@ViewData["Title"]</title>
<div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content" style=" background: #2A3F54;">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h1 style="color:#fff">Chỉnh sửa tài khoản</h1>
        </div>
        <div class="modal-body" style="border-radius:8px; background-color:#fff;">
            <form id="submitForm" action="@Url.Action("SaveEditBankAccount","KeToan")" method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label for="inputEmail3" class="control-label">Mã KH</label>
                            <input class="form-control" value="@Model.AgentCode" id="agentCode" name="agentCode" placeholder="VD: VCB" maxlength="20" required>
                            <input class="form-control" value="@Model.AgentCode" hidden id="currentAgentCode" name="currentAgentCode" placeholder="VD: VCB" maxlength="20" required>

                            <input class="form-control" value="@Model.Id" id="Id" name="Id" hidden>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label for="inputEmail3" class="control-label">Số điện thoại</label>
                            <input class="form-control" value="@Model.PhoneNumber" id="phoneNumber" name="phoneNumber" placeholder="VD: Vietcombank" maxlength="20" required>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label for="inputEmail3" class="control-label">Số tài khoản</label>
                            <input class="form-control" value="@Model.SecondarySerial" id="secondarySerial" name="secondarySerial" placeholder="Số tài khoản" maxlength="50" required>
                        </div>
                    </div>
                    <div class="col-sm-12" style="float:right">
                        <div class="form-group" style="float:right;">
                            <label for="inputEmail3" class="control-label">&nbsp;</label>
                            <div>
                                <button type="submit" class="btn btn-primary">Lưu</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="~/js/BankAccount/EditBankAccountDetail.js"></script>