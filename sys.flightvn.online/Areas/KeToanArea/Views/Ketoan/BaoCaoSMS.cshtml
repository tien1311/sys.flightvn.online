@model ReflectionIT.Mvc.Paging.PagingList<BienDongSoDuModel>
@addTagHelper *,ReflectionIT.Mvc.Paging

@{
    ViewData["Title"] = "Báo cáo SMS";
    Layout = "~/Views/Shared/MasterLayout.cshtml";
}


<title>@ViewData["Title"]</title>
<link href="~/jquery.dataTables.css" rel="stylesheet" />
<style>
    .form-horizontal .has-feedback .form-control-feedback {
        right: 0;
    }

    #gridVeHoan th {
        padding: 10px 6px;
    }

    .pagination {
        margin: 8px 0;
    }

    .table > tbody > tr > td, .table > tbody > tr > th, .table > tfoot > tr > td, .table > tfoot > tr > th, .table > thead > tr > td, .table > thead > tr > th {
        vertical-align: middle;
    }

    .table {
        margin-bottom: 0px;
    }
    .border-radius-td-green
    {
        border-radius: 10px;
        background-color: green;
        color: #ffffff;
        padding: 10px;
    }

    .border-radius-td-red {
        border-radius: 10px;
        background-color: red;
        color: #ffffff;
        padding: 10px;
    }
</style>
<h2>Báo cáo SMS</h2>

<div class="x_panel">
    <div class="x_content">
        @using (Html.BeginForm("BaoCaoSMS", "KeToan",  FormMethod.Get))
        {
            <div class="row">
                <div class="form-horizontal">
                    <div class="item col-sm-4">
                        <div class="form-group">
                            <label class="col-form-label pad-top-6 col-md-4 col-sm-4 col-xs-12 label-align" for="first-name">
                                Từ Ngày
                            </label>
                            <div class="col-md-8 col-sm-6 col-xs-12 ">

                                <fieldset class="col-xs-12" style="padding:0px">
                                    <div class="control-group">
                                        <div class="controls">
                                            <div class=" xdisplay_inputx form-group has-feedback">
                                                <input type="text" class="form-control has-feedback-right" id="single_cal5" name="cal_from" value='@ViewBag.DateFrom'>
                                                <span class="fa fa-calendar-o form-control-feedback right" aria-hidden="true"></span>
                                                <span id="inputSuccess2Status" class="sr-only">(success)</span>
                                            </div>
                                        </div>
                                    </div>
                                </fieldset>
                            </div>
                        </div>
                    </div>
                    @*Muốn cho trường tháng năm rỗng ko lấy ngày hiện tại vào file custom.min.js dòng 1230*@
                    <div class="item col-sm-4">
                        <div class="form-group">
                            <label class="col-form-label pad-top-6 col-md-4 col-sm-4 col-xs-12 label-align" for="first-name">
                                Đến Ngày
                            </label>
                            <div class="col-md-8 col-sm-6 col-xs-12 ">
                                <fieldset class="col-xs-12" style="padding:0px">
                                    <div class="control-group">
                                        <div class="controls">
                                            <div class=" xdisplay_inputx form-group has-feedback" id="">
                                                <input type="text" class="form-control has-feedback-right" id="single_cal6" name="cal_to" value='@ViewBag.DateTo'>
                                                <span class="fa fa-calendar-o form-control-feedback right" aria-hidden="true"></span>
                                                <span id="inputSuccess2Status" class="sr-only">(success)</span>
                                            </div>
                                        </div>
                                    </div>
                                </fieldset>
                            </div>
                        </div>
                    </div>
                    <div class="item col-sm-4">
                        <div class="form-group">
                            <label class="col-form-label pad-top-6 col-md-4 col-sm-4 col-xs-12 label-align" for="first-name">
                                Số tiền
                            </label>
                            <div class="col-md-8 col-sm-6 col-xs-12 ">
                                <fieldset class="col-xs-12" style="padding:0px">
                                    <div class="control-group">
                                        <div class="controls">
                                            <div class=" xdisplay_inputx form-group has-feedback">
                                                <input class="form-control" id="SoTien" name="SoTien" value='@ViewBag.SoTien' type="text" />
                                            </div>
                                        </div>
                                    </div>
                                </fieldset>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="col-form-label pad-top-6 col-md-4 col-sm-4 col-xs-12 label-align" for="first-name">
                            Ngân Hàng
                        </label>
                        <div class="col-sm-8">
                            <select id="NGANHANG" name="NGANHANG" class="form-control">
                                @if (ViewBag.NganHang == "All")
                                {
                                    <option selected="selected" value="All">Tất Cả</option>
                                }
                                else
                                {
                                    <option value="All">Tất Cả</option>
                                }
                                @if (ViewBag.NganHang == "ACB")
                                {
                                    <option selected="selected" value="ACB">ACB</option>
                                }
                                else
                                {
                                    <option value="ACB">ACB</option>
                                }
                                @if (ViewBag.NganHang == "VCB")
                                {
                                    <option selected="selected" value="VCB">VCB</option>
                                }
                                else
                                {
                                    <option value="VCB">VCB</option>
                                }
                                @if (ViewBag.NganHang == "TCB")
                                {
                                    <option selected="selected" value="TCB">TCB</option>
                                }
                                else
                                {
                                    <option value="TCB">TCB</option>
                                }
                                @if (ViewBag.NganHang == "STB")
                                {
                                    <option selected="selected" value="STB">STB</option>
                                }
                                else
                                {
                                    <option value="STB">STB</option>
                                }
                                @if (ViewBag.NganHang == "VTB")
                                {
                                    <option selected="selected" value="VTB">VTB</option>
                                }
                                else
                                {
                                    <option value="VTB">VTB</option>
                                }
                                @if (ViewBag.NganHang == "OCB")
                                {
                                    <option selected="selected" value="OCB">OCB</option>
                                }
                                else
                                {
                                    <option value="OCB">OCB</option>
                                }
                                @if (ViewBag.NganHang == "MB")
                                {
                                    <option selected="selected" value="MB">MB</option>
                                }
                                else
                                {
                                    <option value="MB">MB</option>
                                }
                                @if (ViewBag.NganHang == "BIDV")
                                {
                                    <option selected="selected" value="BIDV">BIDV</option>
                                }
                                else
                                {
                                    <option value="BIDV">BIDV</option>
                                }







                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label for="" class="col-sm-4" style="padding-top:11px">Tình trạng</label>
                        <div class="col-sm-8">
                            <select id="TINHTRANG" name="TINHTRANG" class="form-control">
                                @if (ViewBag.TinhTrang == "All")
                                {
                                    <option selected="selected" value="All">Tất Cả</option>
                                }
                                else
                                {
                                    <option value="All">Tất Cả</option>
                                }
                                @if (ViewBag.TinhTrang == "Nợ")
                                {
                                    <option selected="selected" value="Nợ">Nợ</option>
                                }
                                else
                                {
                                    <option value="Nợ">Nợ</option>
                                }
                                @if (ViewBag.TinhTrang == "Có")
                                {
                                    <option selected="selected" value="Có">Có</option>
                                }
                                else
                                {
                                    <option value="Có">Có</option>
                                }



                            </select>
                        </div>
                    </div>
                </div>
      

             
                <div class="col-sm-2">
                    <div class="form-group">

                        <div class="col-xs-6">
                            <input id="i" name="i" hidden value="5" />
                            <button type="submit" class="btn btn-primary" name="search">Tìm kiếm</button>
                        </div>
                    </div>
                </div>
            </div>




        }
    </div>
</div>

<div class="x_panel">
    <div class="x_content">
        <div class="table-responsive" style="font-size:12px;">

            <table id="gridTable" class="table table-striped jambo_table bulk_action">
                <thead>
                    <tr class="headings">
                        <th class="column-title"> EFF </th>
                        <th class="column-title">  </th>
                        <th class="column-title"> STT</th>
                        <th class="column-title"> Mã CK </th>
                        <th class="column-title"> Ngân hàng  </th>
                        <th class="column-title"> Mã KH </th>
                        <th class="column-title"> Số tiền </th>
                        <th class="column-title"> Nợ có </th>
                        <th class="column-title"> Nội dung </th>
                        <th class="column-title"> Ngày CK </th>
                        <th class="column-title"> Ngày nhận </th>
                        <th class="column-title"> Ngày gửi </th>
                        <th class="column-title"> Ngày sửa </th>
                        <th class="column-title"> Người sửa </th>
                     
                    </tr>
                </thead>
                <tbody>
                    @if (Model == null)
                    {
                        <tr class="even pointer">
                            <td colspan="12" style="text-align:center;">
                                <i>Không có thông tin để hiển thị</i>
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                        <tr id="@item.MACK" class="even pointer">
                          
                            @if (item.DULIEUEFF != "")
                                {

                                    <td class=""><i class="fa fa-check" style="color:green"></i></td>
                                }
                                else
                                {
                                    if (!item.NGANHANG.Contains("ACB"))
                                    {
                                        if (item.MACK.Contains("BIDV"))
                                        {
                                            <td class=""></td>
                                        }
                                        else
                                        {
                                            if (item.MAKH != "")
                                            {
                                                <td class=""><a class="UpdateDataEFF" data-toggle="modal" data-target="#openPopup" href="javascript:;"><i class="fa fa-pencil-square-o" style="color:red;font-size: 16px;" aria-hidden="true"></i></a></td>
                                            }
                                            else
                                            {
                                                <td class=""></td>
                                            }
                                        }
                                       
                                    }
                                    else
                                    {
                                        if (item.MACK.Contains("ACB"))
                                        {
                                            if (item.MAKH != "")
                                            {
                                                <td class=""><a class="UpdateDataEFF" data-toggle="modal" data-target="#openPopup" href="javascript:;"><i class="fa fa-pencil-square-o" style="color:red;font-size: 16px;" aria-hidden="true"></i></a></td>
                                            }
                                            else
                                            {
                                                <td class=""></td>
                                            }
                                        }
                                        else
                                        {
                                            <td class=""></td>
                                        }
                                    }
                                   

                            }
                            @if (item.Type == "SMS")
                            {
                                    <td class=""><div class="border-radius-td-green">@item.Type</div> </td>
                            }
                            else
                            {
                                    <td  class=""><div class="border-radius-td-red">@item.Type</div></td>
                            }
                            <td style="text-align:center">@item.STT</td>
                            <td class="">@item.MACK</td>
                            <td class="">@item.NGANHANG</td>
                            <td class="">@item.MAKH</td>
                            <td class="">@item.SOTIEN</td>
                            <td class="">@item.NOCO</td>
                            <td class="">@item.NOIDUNG</td>
                            <td class="">@item.NGAYCK</td>
                            <td class="">@item.NGAYNHAN</td>
                            <td class="">@item.NGAYGUI</td>
                            <td class="">@item.NGAYSUA</td>
                            <td class="">@item.NGUOISUA</td>
                        


                        </tr>
                        }
                    }
                </tbody>
            </table>
            @if (Model != null)
            {

                <nav style="float:right;">
                    <vc:pager paging-list="@Model"></vc:pager>
                </nav>
            }
        </div>
    </div>
</div>


<script src="~/js/jquery.1.7.2.min.js"></script>
<script src="~/js/jquery-ui.1.8.9.js"></script>
<link href="~/js/jquery-ui.1.8.9.css" rel="stylesheet" />


<script>

    $("#gridTable .UpdateDataEFF").click(function () {
        
        var MACK = String($(this).closest('tr').attr('id'));
      
        $.ajax({
            type: "POST",
            url: "../KeToan/UpdateEFF",
            data: { MaCK: MACK },
            success: function (response) {
                if (response == "TrungData") {
                    alert("Mã chuyển khoản này đã có người cập nhật");
                }
                else {
                   
                        alert("Cập nhật thành công");
                   

                }

                location.reload();
            },
            failure: function (response) {

                alert(response.responseText);
            },
            error: function (response) {

                alert(response.responseText);
            }
        });
    });

</script>


