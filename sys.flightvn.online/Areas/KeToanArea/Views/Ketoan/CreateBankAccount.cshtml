@{
    ViewData["Title"] = "Thêm tài khoản mới";
}
<title>@ViewData["Title"]</title>
<div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content" style=" background: #2A3F54;">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h1 style="color:#fff">Tạo mới tài khoản</h1>
        </div>
        <div class="modal-body" style="border-radius:8px; background-color:#fff;">
            <form id="submitForm" action="@Url.Action("SaveCreateBankAccount","KeToan")" method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label for="inputEmail3" class="control-label">Mã ngân hàng</label>
                            <input class="form-control" id="bankCode" name="bankCode" placeholder="VD: VCB" maxlength="10" required>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label for="inputEmail3" class="control-label">Tên ngân hàng</label>
                            <input class="form-control" id="bankName" name="bankName" placeholder="VD: Vietcombank" maxlength="150" required>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label for="inputEmail3" class="control-label">Số định danh</label>
                            <input class="form-control" id="firstSerial" name="firstSerial" placeholder="Số định danh" maxlength="50" required>
                        </div>
                    </div>
                    <div class="col-sm-12" style="float:right">
                        <div class="form-group" style="float:right;">
                            <label for="inputEmail3" class="control-label">&nbsp;</label>
                            <div>
                                <button type="submit" class="btn btn-primary">Lưu</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="~/js/BankAccount/CreatetBankAccount.js"></script>