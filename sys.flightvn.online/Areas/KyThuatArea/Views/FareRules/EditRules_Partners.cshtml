@model Rules_Partners
<style>
    @@media(min-width: 768px) {
        .modal-dialog {
            width: 1000px;
            margin: 30px auto;
        }
    }

    .modal-body img {
        width: 100% !important;
        height: auto !important;
    }

    .modal-header {
        padding: 6px 15px;
        border-bottom: none;
    }
</style>
<div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content" style=" background: #2A3F54;">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h1 style="color: #FFF; font-size: 16px;">Edit Partner</h1>
        </div>
        <div class="modal-body" style="border-radius:8px; background-color:#fff;">
            @using (Html.BeginForm("SaveEditRules_Partners", "FareRules", new { i = 12 }, FormMethod.Post))
            {
                <div class="col-sm-6">
                    <div class="row">
                        <label for="" class="col-sm-12 control-label">PartnerCode</label>
                        <div class="col-sm-12">
                            <div class="control-group">
                                <div class="controls">
                                    <div class=" xdisplay_inputx form-group has-feedback">
                                        <input type="text" class="form-control" id="PartnerCode" name="PartnerCode" value="@Model.PartnerCode">
                                        <input type="hidden" class="form-control" id="PartnerID" name="PartnerID" value="@Model.PartnerID">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <label for="" class="col-sm-12 control-label">PartnerName</label>
                        <div class="col-sm-12">
                            <div class="control-group">
                                <div class="controls">
                                    <div class=" xdisplay_inputx form-group has-feedback">
                                        <input type="text" class="form-control" id="PartnerName" name="PartnerName" value="@Model.PartnerName">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="row">
                        <label for="" class="col-sm-12 control-label">PartnerPhones</label>
                        <div class="col-sm-12">
                            <div class="control-group">
                                <div class="controls">
                                    <div class=" xdisplay_inputx form-group has-feedback">
                                        <input type="text" class="form-control" id="PartnerPhones" name="PartnerPhones" value="@Model.PartnerPhones">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <label for="" class="col-sm-12 control-label">PartnerEmails</label>
                        <div class="col-sm-12">
                            <div class="control-group">
                                <div class="controls">
                                    <div class=" xdisplay_inputx form-group has-feedback">
                                        <input type="text" class="form-control" id="PartnerEmails" name="PartnerEmails" value="@Model.PartnerEmails">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <label for="" class="col-sm-12 control-label">&nbsp;</label>
                        <div class="col-sm-12">
                            <div class="control-group">
                                <div class="controls">
                                    <div class=" xdisplay_inputx form-group has-feedback">
                                        <button type="submit" class="btn btn-primary">Save</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>