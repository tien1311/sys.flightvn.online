@model Rules_Airlines
<style>
    @@media(min-width: 768px) {
        .modal-dialog {
            width: 1000px;
            margin: 30px auto;
        }
    }

    .modal-body img {
        width: 100% !important;
        height: auto !important;
    }

    .modal-header {
        padding: 6px 15px;
        border-bottom: none;
    }
</style>
<div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content" style=" background: #2A3F54;">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h1 style="color: #FFF; font-size: 16px;">Edit Airline</h1>
        </div>
        <div class="modal-body" style="border-radius:8px; background-color:#fff;">
            @using (Html.BeginForm("SaveEditRules_Airlines", "FareRules", new { i = 12 }, FormMethod.Post))
            {
                <div class="col-sm-6">
                    <div class="row">
                        <label for="" class="col-sm-12 control-label">AirlineName</label>
                        <div class="col-sm-12">
                            <div class="control-group">
                                <div class="controls">
                                    <div class=" xdisplay_inputx form-group has-feedback">
                                        <input type="text" class="form-control" id="AirlineName" name="AirlineName" value="@Model.AirlineName">
                                        <input type="hidden" class="form-control" id="AirlineID" name="AirlineID" value="@Model.AirlineID">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <label for="" class="col-sm-12 control-label">AirlineIATACode</label>
                        <div class="col-sm-12">
                            <div class="control-group">
                                <div class="controls">
                                    <div class=" xdisplay_inputx form-group has-feedback">
                                        <input type="text" class="form-control" id="AirlineIATACode" name="AirlineIATACode" value="@Model.AirlineIATACode">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <label for="" class="col-sm-12 control-label">AirlineICAOCode</label>
                        <div class="col-sm-12">
                            <div class="control-group">
                                <div class="controls">
                                    <div class=" xdisplay_inputx form-group has-feedback">
                                        <input type="text" class="form-control" id="AirlineICAOCode" name="AirlineICAOCode" value="@Model.AirlineICAOCode">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="row">
                        <label for="" class="col-sm-12 control-label">AirlineOATCode</label>
                        <div class="col-sm-12">
                            <div class="control-group">
                                <div class="controls">
                                    <div class=" xdisplay_inputx form-group has-feedback">
                                        <input type="text" class="form-control" id="AirlineOATCode" name="AirlineOATCode" value="@Model.AirlineOATCode">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <label for="" class="col-sm-12 control-label">Country</label>
                        <div class="col-sm-12">
                            <div class="control-group">
                                <div class="controls">
                                    <div class=" xdisplay_inputx form-group has-feedback">
                                        <input type="text" class="form-control" id="Country" name="Country" value="@Model.Country">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <label for="" class="col-sm-12 control-label">&nbsp;</label>
                        <div class="col-sm-12">
                            <div class="control-group">
                                <div class="controls">
                                    <div class=" xdisplay_inputx form-group has-feedback">
                                        <button type="submit" class="btn btn-primary">Save</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>