    function ListAirline() {
        var AirlineID = document.getElementById("Airline").value;
        $.ajax({
            type: "POST",
            url: "../FareRules/ListCategories",
            data: {
                AirlineID: AirlineID
            },
            success: function (response) {
                var x = document.getElementById("Category");
                $("#Category option").remove();
                for (var i = 0; i < response.length; i++) {
                    var optionSelect = document.createElement("option");
                    optionSelect.value = response[i].categoryID
                    optionSelect.text = response[i].categoryName;
                    x.appendChild(optionSelect);
                }
            },
            failure: function (response) {
                alert(response.responseText);
            },
            error: function (response) {
                alert(response.responseText);
            }
        });
    }
    function SaveLuckyDrawData(id) {
        var RuleDetailID = document.getElementById("RuleDetailID").value;
        var CategoryId = document.getElementById("Category").value;
        var AirlineID = document.getElementById("Airline").value;
        var SeatClasses = document.getElementById("SeatClasses").value;
        var CabinClassCode = document.getElementById("CabinClassCode").value;
        var CabinClassName_vi = document.getElementById("CabinClassName_vi").value;
        var CabinClassName_en = document.getElementById("CabinClassName_en").value;
        var DomesticRules_vi = CKEDITOR.instances['DomesticRules_vi'].getData();
        var DomesticRules_en = CKEDITOR.instances['DomesticRules_en'].getData();
        var IntlRules_vi = CKEDITOR.instances['IntlRules_vi'].getData();
        var IntlRules_en = CKEDITOR.instances['IntlRules_en'].getData();
        var model = {
            RuleDetailID: RuleDetailID,
            CategoryId: CategoryId,
            AirlineID: AirlineID,
            SeatClasses: SeatClasses,
            CabinClassCode: CabinClassCode,
            CabinClassName_vi: CabinClassName_vi,
            CabinClassName_en: CabinClassName_en,
            DomesticRules_vi: DomesticRules_vi,
            DomesticRules_en: DomesticRules_en,
            IntlRules_vi: IntlRules_vi,
            IntlRules_en: IntlRules_en,
        }
        var jsonData = JSON.stringify(model);
        $.ajax({
            type: "POST",
            processData: true,
            url: "../FareRules/SaveEditRules_RuleDetails",
            data: {
                data: jsonData
            },
            success: function (response) {
                if (response == true) {
                    alert("Bạn đã chỉnh sửa thành công");
                }
                else {
                    alert("Bạn đã chỉnh sửa không thành công");
                }
                window.location.href = "../FareRules/Rules_RuleDetails?&i=12";
            },
            failure: function (response) {
                alert(response.responseText);
            },
            error: function (response) {
                alert(response.responseText);
            }
        });
    };
