<style>
    @@media(min-width: 768px) {
        .modal-dialog {
            width: 1000px;
            margin: 30px auto;
        }
    }

    .modal-body img {
        width: 100% !important;
        height: auto !important;
    }

    .modal-header {
        padding: 6px 15px;
        border-bottom: none;
    }

    .selectBox {
        position: relative;
    }

        .selectBox select {
            width: 100%;
            font-weight: bold;
        }

    .overSelect {
        position: absolute;
        left: 0;
        right: 0;
        top: 0;
        bottom: 0;
    }

    #checkboxes {
        display: none;
        border: 1px #dadada solid;
        position: absolute;
        z-index: 9;
        background: #fff;
        width: 100%;
    }

        #checkboxes label {
            display: block;
            padding: 0 15px;
        }

        #checkboxes input {
            margin-right: 5px;
        }

        #checkboxes span {
            display: inline !important;
        }

        #checkboxes label:hover {
            background-color: #1e90ff;
            color: #fff;
        }
</style>
<div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content" style=" background: #2A3F54;">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h1 style="color: #FFF; font-size: 16px;">Edit Rule</h1>
        </div>
        <div class="modal-body" style="border-radius:0 0 8px; background-color:#fff;">
            <div class="row">
                <div class="col-sm-6">
                    <label for="" class="col-sm-12 control-label">Airline</label>
                    <div class="col-sm-12">
                        <fieldset class="col-xs-12" style="padding:0px">
                            <div class="control-group">
                                <div class="controls">
                                    <div class=" xdisplay_inputx form-group has-feedback">
                                        <select id="Airline" name="Airline" class="select2_single form-control" onchange="ListAirline()">
                                            @for (int i = 0; i < ListAirlines.Count; i++)
                                            {
                                                if (ListAirlines[i].AirlineID == Model.AirlineID)
                                                {
                                                    <option selected value="@ListAirlines[i].AirlineID">@ListAirlines[i].AirlineName</option>
                                                }
                                                else
                                                {
                                                    <option value="@ListAirlines[i].AirlineID">@ListAirlines[i].AirlineName</option>
                                                }
                                            }
                                        </select>
                                        <input type="hidden" id="RuleDetailID" name="RuleDetailID" value="@Model.RuleDetailID" />
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                    <label for="" class="col-sm-12 control-label">SeatClasses</label>
                    <div class="col-sm-12">
                        <div class="control-group">
                            <div class="controls">
                                <div class=" xdisplay_inputx form-group has-feedback">
                                    <input type="text" class="form-control" id="SeatClasses" name="SeatClasses" placeholder="SeatClasses" value="@Model.SeatClasses">
                                </div>
                            </div>
                        </div>
                    </div>
                    <label for="" class="col-sm-12 control-label">CabinClassCode</label>
                    <div class="col-sm-12">
                        <div class="control-group">
                            <div class="controls">
                                <div class=" xdisplay_inputx form-group has-feedback">
                                    <input type="text" class="form-control" id="CabinClassCode" name="CabinClassCode" placeholder="CabinClassCode" value="@Model.CabinClassCode">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <label for="" class="col-sm-12 control-label">CategoryName</label>
                    <div class="col-sm-12">
                        <fieldset class="col-xs-12" style="padding:0px">
                            <div class="control-group">
                                <div class="controls">
                                    <div class=" xdisplay_inputx form-group has-feedback">
                                        <select id="Category" name="Category" class="select2_single form-control">
                                            <option value="@Model.CategoryId">@Model.CategoryName</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                    <label for="" class="col-sm-12 control-label">CabinClassName_vi</label>
                    <div class="col-sm-12">
                        <div class="control-group">
                            <div class="controls">
                                <div class=" xdisplay_inputx form-group has-feedback">
                                    <input type="text" class="form-control" id="CabinClassName_vi" name="CabinClassName_vi" placeholder="CabinClassName_vi" value="@Model.CabinClassName_vi">
                                </div>
                            </div>
                        </div>
                    </div>
                    <label for="" class="col-sm-12 control-label">CabinClassName_en</label>
                    <div class="col-sm-12">
                        <div class="control-group">
                            <div class="controls">
                                <div class=" xdisplay_inputx form-group has-feedback">
                                    <input type="text" class="form-control" id="CabinClassName_en" name="CabinClassName_en" placeholder="CabinClassName_en" value="@Model.CabinClassName_en">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <label for="" class="col-sm-12 control-label">DomesticRules_vi</label>
                <div class="col-sm-12">
                    <div class="form-group">
                        <textarea name="DomesticRules_vi" id="DomesticRules_vi">@Model.DomesticRules_vi</textarea>
                    </div>
                </div>
                <label for="" class="col-sm-12 control-label">DomesticRules_en</label>
                <div class="col-sm-12">
                    <div class="form-group">
                        <textarea name="DomesticRules_en" id="DomesticRules_en">@Model.DomesticRules_en</textarea>
                    </div>
                </div>
                <label for="" class="col-sm-12 control-label">IntlRules_vi</label>
                <div class="col-sm-12">
                    <div class="form-group">
                        <textarea name="IntlRules_vi" id="IntlRules_vi">@Model.IntlRules_vi</textarea>
                    </div>
                </div>
                <label for="" class="col-sm-12 control-label">IntlRules_en</label>
                <div class="col-sm-12">
                    <div class="form-group">
                        <textarea name="IntlRules_en" id="IntlRules_en">@Model.IntlRules_en</textarea>
                    </div>
                </div>
                <div class="col-sm-12">
                    <button type="submit" class="btn btn-primary" onclick="SaveLuckyDrawData(this)" name="Save" value="Save">Save</button>
                </div>
            </div>
        </div>
    </div>
</div>
