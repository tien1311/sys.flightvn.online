@using Manager.Model.Models.PaginationBase
@model PaginationBase<Manager.Model.Models.IP.APIPartner>
@{
    ViewData["Title"] = "Danh sách IP White List";
    Layout = "~/Views/Shared/MasterLayout.cshtml";
}
<style>
    table tr td {
        vertical-align: middle !important;
    }

    .collapse.show {
        display: table-row !important;
    }

    .clickable-row {
        cursor: pointer;
    }
</style>

<title>@ViewData["Title"]</title>

@Html.Partial("_EnvietOverlay")


<div>
    <a id="BtnCreate" href="javascript:;" class="btn btn-primary">Tạo mới</a>
</div>

<div class="x_panel">
    <div class="x_content">
        <div class="row">
            <div class="col-sm-3">
                <div class="form-group">
                    <label>Tên công ty</label>
                    <input type="text" class="form-control" name="companyName" id="companyName" placeholder="Tên công ty" />
                </div>
            </div>
        </div>
        <hr style="margin:inherit !important;" />
        @* // Số lượng hiển thị *@
        <div style="margin: 10px 0px;">
            <label style="margin-right: 5px;">Hiển thị</label>
            <select id="Page_Size" style="padding:6px; border-radius:4px;">
                <option style="padding:6px; border-radius:4px;" value="5">5</option>
                <option selected value="10">10</option>
                <option value="20">20</option>
            </select>
            <label style="margin-left: 5px;">dòng</label>
        </div>
        <div class="table-responsive" id="table_Pagination">
            @await Html.PartialAsync("_TableIPWhiteListPaginationPatial", Model)
        </div>
    </div>
</div>

<div class="modal fade" id="openPopup" role="dialog">
</div>
<script src="~/js/jquery.1.7.2.min.js"></script>
<script src="~/js/jquery-ui.1.8.9.js"></script>
<link href="~/js/jquery-ui.1.8.9.css" rel="stylesheet" />
