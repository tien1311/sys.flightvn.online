@model List<DecentralizationModel>

@{
    ViewData["Title"] = "Phân quyền";
    Layout = "~/Views/Shared/MasterLayout.cshtml";
}
<title>@ViewData["Title"]</title>
<h2>Phân quyền</h2>
<div class="table-responsive" style="font-size:12px;">
    <table id="gridTable" class="table table-striped jambo_table bulk_action">
        <thead>
            <tr class="headings">
                <th class="">STT</th>
                <th class="column-title">Bộ phận</th>
                <th class="column-title">Chức năng</th>             
                <th style="display:none" class="column-title"></th>
            </tr>
        </thead>
        <tbody>

            @{int i = 1;}
            @if (Model != null)
            {         
            @foreach (var item in Model)
            {
            <tr id="@item.RowID" class="even pointer">
                <td style="text-align:center">@i</td>
                <td class=""><a class="Chitiet" style="color:red;" data-target="#openPopup" href="javascript:;">@item.Phongban</a></td>
               
                    <td class="">@item.Dschucnang</td>
                

            </tr>
            i++;
            }                
            }
            else
            {
            <tr>
                <td></td>
                <td></td>
                <td></td>             
                <td style="display:none"></td>
            </tr>
            }
        </tbody>
    </table>
</div>

<script>
        $("#gridTable .Chitiet").click(function () {

            /*var index = $('#gridVeHoan tr').index($(this).closest('tr'));*/
            var id = String($(this).closest('tr').attr('id'));

            $.ajax({
                type: "POST",
                url: "../KyThuat/ThemChucNang",
                data: { khoachinh: id },
                success: function (response) {
                    $('#openPopup').html(response);
                    $('#openPopup').modal({
                        backdrop: 'static',
                        keyboard: false,
                        show: true
                    });
                },
                failure: function (response) {
                    alert(response.responseText);
                },
                error: function (response) {
                    alert(response.responseText);
                }
            });
        });
</script>
