@model SideMenuModel
@{
    ViewData["Title"] = "MenuNews";
    Layout = "~/Views/Shared/MasterLayout.cshtml";
}


<h2>Menu trang News</h2>
<div class="x_panel">
    <div class="x_content">
        <div class="row">
            <div class="col-sm-6">
                <div>
                    <a id="BtnCreateParent" data-toggle="modal" data-target="#openPopup" href="javascript:;" class="btn btn-primary">Tạo mới danh mục cha</a>
                </div>
                <div class="table-responsive">
                    <table id="gridSideMenu_Parent" class="table table-hover table-bordered">
                        <thead>
                            <tr>
                                <th></th>
                                <th>STT</th>
                                <th>Danh mục cha</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                int i = 1;
                                foreach (var item in Model.ListSideMenu_Parent)
                                {
                                    <tr id="@item.ID">
                                        <td style="text-align: center;"><a class="Edit" style="color:blue;" data-toggle="modal" data-target="#openPopup" href="javascript:;"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a></td>
                                        <td>@i</td>
                                        <td>@item.Name</td>
                                        <td style="text-align: center;">
                                            @if (item.Status == true)
                                            {
                                                <a class="Status" style="color:red;" href="#" onclick="UpdateStatusParent(this,0,@item.ID)"><i class="fa fa-trash" aria-hidden="true"></i></a>
                                                <input type="hidden" id="StatusParent" value="0" />
                                            }
                                            else
                                            {
                                                <a class="Status" style="color:green;" href="#" onclick="UpdateStatusParent(this,1,@item.ID)"><i class="fa fa-eye" aria-hidden="true"></i></a>
                                                <input type="hidden" id="StatusParent" value="1" />
                                            }
                                        </td>
                                    </tr>
                                    i++;
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-sm-6">
                <div>
                    <a id="BtnCreateChild" data-toggle="modal" data-target="#openPopup" href="javascript:;" class="btn btn-primary">Tạo mới danh mục con</a>
                </div>
                <div class="table-responsive">
                    <table id="gridSideMenu_Child" class="table table-hover table-bordered">
                        <thead>
                            <tr>
                                <th></th>
                                <th>STT</th>
                                <th>Danh mục con</th>
                                <th>Danh mục cha</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                int i = 1;
                                foreach (var item in Model.ListSideMenu_Child)
                                {
                                    <tr id="@item.ID">
                                        <td style="text-align: center;"><a class="Edit" style="color:blue;" data-toggle="modal" data-target="#openPopup" href="javascript:;"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a></td>
                                        <td>@i</td>
                                        <td>@item.Name</td>
                                        <td>@item.Name_Parent</td>
                                        <td style="text-align: center;">
                                            @if (item.Status == true)
                                            {
                                                <a class="Status" style="color:red;" href="#" onclick="UpdateStatusChild(this,0,@item.ID)"><i class="fa fa-trash" aria-hidden="true"></i></a>
                                                <input type="hidden" id="StatusChild" value="0" />
                                            }
                                            else
                                            {
                                                <a class="Status" style="color:green;" href="#" onclick="UpdateStatusChild(this,1,@item.ID)"><i class="fa fa-eye" aria-hidden="true"></i></a>
                                                <input type="hidden" id="StatusChild" value="1" />
                                            }
                                        </td>
                                    </tr>
                                    i++;
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
