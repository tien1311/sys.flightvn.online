        $.ajax({
            type: "POST",
            url: "../Data/StatusMenuParent",
            data: {
                ID: id,
                Status: status
            },
            success: function (response) {
                location.reload();
                if (response == true) {
                    alert("Bạn đã lưu danh mục thành công");
