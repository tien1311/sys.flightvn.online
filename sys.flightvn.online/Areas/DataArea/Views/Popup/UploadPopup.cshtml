<div class="x_panel">
    <div class="x_content">
        <form asp-controller="Popup" asp-route-i="9" asp-action="SaveImgPopup" method="post" enctype="multipart/form-data">
            <div class="row form-horizontal">
                <div class="col-sm-3">
                    <div class="form-group">
                        <div class="row">
                            <label for="inputEmail3" class="col-sm-2 control-label">Link</label>
                            <div class="col-sm-10">
                                <input class="form-control" name="Link" placeholder="" value="@Model.popupSys_Img.adv_linkto">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="item form-group">
